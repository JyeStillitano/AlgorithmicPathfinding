<Window x:Class="IAI_Assignment1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IAI_Assignment1"
        mc:Ignorable="d"
        Height="800"
        Width="1600"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.08*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
            
        <Label 
        Content="Algorithmic Pathfinding" 
        Grid.Row="0" 
        HorizontalAlignment="Center" 
        VerticalAlignment="Center" 
        Padding="20,0,0,0"
        FontSize="24" 
        FontFamily="Roboto"
        Foreground="White" 
        Panel.ZIndex="1" FontWeight="Bold"/>
        <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="#FF584CA9"/>

        <Frame Grid.Row="1" Name="Main" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
